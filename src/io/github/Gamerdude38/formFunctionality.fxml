<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.Gamerdude38.Controller">
  <columnConstraints>
    <ColumnConstraints />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
      <RowConstraints />
  </rowConstraints>
  <TabPane prefHeight="368.0" prefWidth="407.0" tabClosingPolicy="UNAVAILABLE" GridPane.rowIndex="1">
    <Tab text="Product Line">
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <GridPane layoutX="22.0" layoutY="147.0" prefHeight="133.0" prefWidth="367.0">
          <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="184.0" minWidth="10.0" prefWidth="146.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="243.0" minWidth="10.0" prefWidth="221.0" />
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
          <Label alignment="CENTER" text="Product Name:" textAlignment="CENTER" />
          <Label text="Manufacturer:" GridPane.rowIndex="1" />
          <Label text="Item Type:" GridPane.rowIndex="2" />
          <ChoiceBox fx:id="cboItemType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
          <TextField fx:id="txtProductName" GridPane.columnIndex="1" />
          <TextField fx:id="txtManufacturer" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
        <Button fx:id="btnAddProduct" layoutX="251.0" layoutY="293.0" mnemonicParsing="false" onAction="#handleAddProductAction" prefHeight="25.0" prefWidth="140.0" text="Add Product" />
            <Label alignment="CENTER" layoutX="21.0" layoutY="14.0" text="Existing Products:" />
            <TableView fx:id="tbvExistingProducts" layoutX="20.0" layoutY="35.0" prefHeight="98.0" prefWidth="369.0" />
      </AnchorPane>
    </Tab>
    <Tab text="Record Production">
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <Label layoutX="21.0" layoutY="14.0" text="Choose Product:" />
        <ListView fx:id="lstChooseProduct" layoutX="15.0" layoutY="37.0" prefHeight="173.0" prefWidth="376.0" />
        <Label layoutX="19.0" layoutY="235.0" text="Choose Quantity:" />
        <ComboBox fx:id="cboChooseQuantity" layoutX="138.0" layoutY="231.0" prefHeight="25.0" prefWidth="145.0" />
        <Button fx:id="btnRecordProduction" layoutX="251.0" layoutY="293.0" mnemonicParsing="false" onAction="#handleRecordProductionAction" prefHeight="25.0" prefWidth="140.0" text="Record Production" />
      </AnchorPane>
    </Tab>
    <Tab text="Production Log">
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <TextArea fx:id="txaProductionLog" layoutX="15.0" layoutY="14.0" prefHeight="311.0" prefWidth="378.0" />
      </AnchorPane>
    </Tab>
  </TabPane>
  <stylesheets>
    <URL value="@style.css" />
  </stylesheets>
</GridPane>
